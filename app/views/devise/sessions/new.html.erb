<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "col-md-4 control-label" %><br />
    <%= f.email_field :email, autofocus: true , class: "form-control right"%>
  </div>

  <div class="field">
    <%= f.label :password, class: "col-md-4 control-label" %><br />
    <%= f.password_field :password, autocomplete: "off" , class: "form-control right"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" , class: "btn btn-default center-block myButton", :html => {:class => "form-horizontal center"}%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
